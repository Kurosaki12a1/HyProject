<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/very_small_padding"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="@dimen/_60sdp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/imgAvatarText"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                tools:src="@drawable/ic_notifiy_on"
                android:scaleType="center"
             />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_marginTop="@dimen/_3sdp"
                tools:text="asdasdadasadasdaddasdasdasadasdad"
                android:id="@+id/tvNameUser"/>

        </LinearLayout>

        <TextView
            android:id="@+id/txtContentFriend"
            android:layout_width="0dp"
            android:layout_weight="8"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:maxWidth="@dimen/max_message_width"
            android:background="@drawable/grey_round_corner"
            android:padding="10dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="20dp"
            android:text="@string/app_name"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/colorBlack"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="5dp"/>
    </LinearLayout>
</LinearLayout>